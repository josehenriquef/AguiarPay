@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-190 p-b-30">
                <section>
                    <form class="login100-form validate-form" id="account" method="post">
                        <div class="login100-form-avatar">
                            <img src="~/images/avatar-user.jpeg" alt="AVATAR">
                        </div>
                        <span class="login100-form-title p-t-20 p-b-45">
                            Aguiar Pay
                            <BR>
                            Divisão de contas
                        </span>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group wrap-input100 validate-input m-b-10" data-validate="Informe o usuário">
                            <input asp-for="Input.Email" class="form-control input100" placeholder="E-Mail">
                            <span asp-validation-for="Input.Email" class="focus-input100 text-danger"></span>
                        </div>
                        <div class="form-group wrap-input100 validate-input m-b-10">
                            <input asp-for="Input.Password" class="form-control input100" placeholder="Senha" />
                            <span asp-validation-for="Input.Password" class="focus-input100 text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="container-login100-form-btn p-t-10">
                            <button type="submit" class="login100-form-btn">Login</button>
                        </div>

                        <div class="text-center w-full p-t-25 p-b-230">
                            <a href="#" class="txt1">
                                AguiarPay® Todos os direitos reservados
                            </a>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
