@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastro";
}

<div class="row">
    <div class="limiter">
        <div class="container-login100" style="background-image: url('~/wwwroot/Images/b3.jpg')">
            <div class="wrap-login100 p-t-190 p-b-30">
                <form class="login100-form validate-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div id="form">
                        <h2 class="title">Cadastrar Usuário</h2>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label>Email</label>             
                            <input asp-for="Input.Email" class="form-control input" placeholder="   Email"/>                                                
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input asp-for="Input.Password" class="form-control input" placeholder="   Senha" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Confirme sua senha</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control input" placeholder="   Confirmar sua senha" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div id="btn">
                            <button type="submit">Cadastrar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
